# LSPU DRES Emergency Response System - Environment Configuration
# Copy this file to .env and fill in your actual API keys

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Get these from your Supabase project dashboard
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# =============================================================================
# AI SERVICES CONFIGURATION
# =============================================================================
# Hugging Face API Token (for AI image classification)
# Get from: https://huggingface.co/settings/tokens
HF_TOKEN=your_huggingface_token_here

# Azure Computer Vision API (Alternative AI service)
# Get from: https://portal.azure.com/ -> Cognitive Services -> Computer Vision
AZURE_VISION_KEY=your_azure_vision_key_here
AZURE_VISION_ENDPOINT=your_azure_vision_endpoint_here

# =============================================================================
# GEOLOCATION SERVICES
# =============================================================================
# OpenCage API Key (for reverse geocoding)
# Get from: https://opencagedata.com/api
OPENCAGE_API_KEY=your_opencage_api_key_here

# =============================================================================
# MAPPING SERVICES (Optional)
# =============================================================================
# Mapbox Access Token (for advanced mapping features)
# Get from: https://account.mapbox.com/access-tokens/
MAPBOX_ACCESS_TOKEN=your_mapbox_token_here

# Google Maps API Key (alternative mapping service)
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# =============================================================================
# NOTIFICATION SERVICES (Optional)
# =============================================================================
# VAPID Keys for Push Notifications
# Generate using: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Set to 'development' for local testing, 'production' for live deployment
NODE_ENV=development

# Debug mode (true/false)
DEBUG=true
